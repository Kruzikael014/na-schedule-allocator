generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Period {
  periodId   String  @id @default(uuid())
  periodName String
  isPresent  Boolean

  activities Activity[]
  roomPics   RoomPic[]
}

model Activity {
  activityId  BigInt  @id @default(autoincrement())
  periodId    String
  description String
  room        String?
  day         String
  shift       String
  pic         String
  code        Int

  period Period @relation(fields: [periodId], references: [periodId])
}

model RoomPic {
  roomPicId BigInt @id @default(autoincrement())
  periodId  String
  pic       String
  room      String

  period Period @relation(fields: [periodId], references: [periodId])
}
